<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Count" />

    <EditText
        android:id="@+id/editStartCount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop Count" />

    <EditText
        android:id="@+id/editStopCount"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10" />

    <TextView
        android:id="@+id/textVLoopCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Collect Loop Count" />

    <EditText
        android:id="@+id/editLoop"
        android:layout_width="62dp"
        android:layout_height="wrap_content"
        android:ems="10" />

    <Button
        android:id="@+id/CountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK" />

    <Button
        android:id="@+id/C_BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back" />

</LinearLayout>